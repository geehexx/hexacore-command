{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pymarkdown: scan active file",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "pymarkdown",
        "--config",
        ".pymarkdown.json",
        "scan",
        "${file}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "pymarkdown",
        "applyTo": "openDocuments",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.+?):(\\d+):(\\d+): (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
